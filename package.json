{
  "name": "clipfast",
  "version": "0.1.0",
  "description": "速贴（ClipFast）桌面端 Electron 应用（V1 核心功能验证）",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --mac",
    "dist:win": "electron-builder --win zip",
    "dist:win:x64": "electron-builder --win zip --x64"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.1"
  },
  "build": {
    "appId": "com.clipfast.app",
    "productName": "速贴 ClipFast",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**",
      "renderer/**",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "zip"
        }
      ],
      "artifactName": "ClipFast-${version}-win-${arch}.zip"
    }
  }
}
